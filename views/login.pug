doctype html
html(lang="it")
  head
    title Login page
    link(rel="stylesheet", type="text/css", href="/styles/login.css")
  body 
    h1 #{title}
    form(action="/login" method="post")
      div Email: 
        input(name="email")
      div Password: 
        input(name="password" type="password")
      div 
        input(type="submit" text="Login")
    script(src='/scripts/login.js')